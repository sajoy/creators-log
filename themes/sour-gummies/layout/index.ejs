<%- partial('partial/header') %>

<main>
    <div class="header">
        <img src="/selfie_hair2.png" alt="drawing of sarah joy taking a mirror selfie">
        <h1>Hi! I'm Sarah Joy.</h1>
        <h2>indie maker + artist * poet</h2>
    </div>
    
    <section id="link-lists">
        <article>
            <h2>Creator's Log</h2>
            <ul>
                <% site.categories.findOne({name: "log"}).posts.each(function(post) {%>
                    <li class='post-link'>
                        <a href="<%- url_for(post.path) %>">
                            <%= date(post.date, config.date_format) %>: <%= post.title %>
                        </a>
                    </li>
                <% }) %>
            </ul>
        </article>

        <article>
            <h2>Browser Extensions</h2>
            <ul>
                <% site.categories.findOne({name: "extension"}).posts.sort('title', 1).each(function(post) {%>
                    <li class='post-link'>
                        <a href="<%- url_for(post.path) %>">
                            <%= post.title %>
                        </a>
                    </li>
                <% }) %>
            </ul>
            <h2>Poetry</h2>
            <ul>
                <% site.categories.findOne({name: "poetry"}).posts.sort('title', 1).each(function(post) {%>
                    <li class='post-link'>
                        <a href="<%- url_for(post.path) %>">
                            <%= post.title %>
                        </a>
                    </li>
                <% }) %>
            </ul>
        </article>
    </section>
</main>

<%- partial('partial/footer') %>